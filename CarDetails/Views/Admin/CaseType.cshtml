@model IEnumerable<CarDetails.DL.Models.CaseType>
@{
	ViewData["Title"] = "Kasa Tipi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
	<section class="section">
		<div class="section-body">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h4>@ViewData["Title"]</h4>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-striped table-hover" id="tableExport" style="width:100%;">
									<thead>
										<tr>
											<th>Id</th>
											<th>Kasa Tipi</th>
											<th>İşlemler</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in Model)
										{
											<tr>
												<td>@item.CaseTypeId</td>
												<td>@item.CaseTypeName</td>
												<td>
													<a class="btn btn-warning" href="/Admin/CaseTypeEdit/@item.CaseTypeId">Güncelle</a>
													<a class="btn btn-danger" onclick="jsDelete(@item.CaseTypeId)">Sil</a>
												</td>
											</tr>
										}

									</tbody>
								</table>
								<a href="/Admin/CreateCaseType" class="btn btn-primary">Yeni Kasa Tipi Ekle</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

<script>
	function jsDelete(id) {
		swal({
			title: "Emin misiniz?",
			text: "Kasa tipi bilgisini silmek için emin misiniz?",
			icon: "warning",
			buttons: true,
			dangerMode: true,
		})
			.then((willDelete) => {
				if (willDelete) {
					window.location.replace('/Admin/CaseTypeDelete/' + id),
						swal("Kasa Tipi Silindi!", {
							icon: "success",
						});
				}
			});
	}


</script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>